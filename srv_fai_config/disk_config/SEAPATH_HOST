#Â One disk configuration with system and ceph on the same disk

# <type> <mountpoint> <size>   <fs type> <mount options> <misc options>

disk_config disk1 disklabel:gpt fstabkey:uuid align-at:1M

primary /boot/efi  512M  vfat    rw
primary -          50G   -       -
primary -          2G    -       -

disk_config lvm

vg vg1  disk1.2
vg1-root    /          15G      ext4    noatime,rw lvcreateopts="--zero n"
vg1-varlog  /var/log    5G      ext4    noatime,rw lvcreateopts="--zero n"
vg1-swap    swap      500M      swap    sw         lvcreateopts="--zero n"

vg vg_ceph  disk1.3
vg_ceph-lv_ceph -           1G   -       - lvcreateopts="--zero n"
